<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_100sdp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cast_image"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_person"
        android:layout_marginTop="@dimen/_10sdp" />

    <TextView
        android:id="@+id/cast_original_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Richard Manes"
        android:fontFamily="@font/poppins_semi_bold"
        android:textColor="@color/textColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cast_image"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_14ssp"
        android:textAlignment="gravity"
        android:gravity="center_horizontal"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp" />

    <TextView
        android:id="@+id/cast_character_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Jones Evans"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/textColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cast_original_name"
        android:layout_marginTop="@dimen/_3sdp"
        android:textSize="@dimen/_12ssp"
        android:textAlignment="gravity"
        android:gravity="center_horizontal"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp" />

</androidx.constraintlayout.widget.ConstraintLayout>